<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${log.directory:-/tmp/test}/scheduler.log</file>

        <encoder>
            <pattern>[%d{dd MMM yyyy HH:mm:ss,SSS}] [%-25.25t] [%-5p] [%-35.35c] [%35.35C{1}:%-4.4L] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{dd MMM yyyy HH:mm:ss,SSS}] [%-25.25t] [%-5p] [%-35.35c] [%35.35C{1}:%-4.4L] %m%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>